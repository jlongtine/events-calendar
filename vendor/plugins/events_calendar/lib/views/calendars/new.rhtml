<html>
  <head>
    <title>
    </title>
      <script src="/javascripts/events_calendar_js/calendar_validation.js"></script>
  </head>
  <body>
    <h2>New Calendar</h2>
    <div id="errorText" style="color:red"></div>
    <% form_tag('/calendars/create/', {:onSubmit => 'return validate_new_cal();'}) do -%>
      <table>
        <tr>
          <td>
            Title:
          </td>
          <td>
            <%= text_field "calendar", "title"%>
          </td>
        </tr>
        <tr>
          <td align="left" valign="top">
            Description:
          </td>
          <td>
            <%= text_area "calendar", "summary" ,:size => "27%"%>
          </td>
        </tr>
        <tr>
          <td>

          </td>
          <td align="right">
            <%= submit_tag 'Create' %>
          </td>
        </tr>

      </table>
    <% end -%>
<%= link_to 'Back', "/calendars" %>
  </body>
</html>
